<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <import type="com.example.studying.a100ballovapplication.news.NewsFragmentViewModel.STATE"/>
        <variable
            name="view"
            type="com.example.studying.a100ballovapplication.news.NewsFragmentViewModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/icons"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:layout_marginTop="@dimen/standart_padding">
                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:visibility="@{view.state == STATE.PROGRESS ? View.VISIBLE : View.GONE}"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/news_recycler_view"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    android:elevation="5dp"
                    android:paddingBottom="50dp"
                    android:clipToPadding="false">

                </android.support.v7.widget.RecyclerView>

                </ScrollView>
            </RelativeLayout>

        <LinearLayout
            android:id="@+id/send_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/icons"
            android:orientation="horizontal"
            android:visibility="@{view.isAdmin ? View.VISIBLE : View.GONE}">

            <EditText
                android:id="@+id/add_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:inputType="textMultiLine"
                android:text="@={view.message}" />

            <ImageButton
                android:background="@color/icons"
                android:id="@+id/send_news_button"
                android:contentDescription="@string/send_news"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_send" />
        </LinearLayout>
    </RelativeLayout>
</layout>