<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studying.a100ballovapplication.MainActivity"
    android:background="@drawable/grad_blue_land">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/gridLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.497">


        <Button
            android:id="@+id/schedule_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/Transparent80"
            android:text="@string/schedule"
            android:textColor="@color/icons" />

        <Button
            android:id="@+id/enroll_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/Transparent80"
            android:text="@string/enroll"
            android:textColor="@color/icons" />

        <Button
            android:id="@+id/contacts_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/Transparent80"
            android:text="@string/contacts"
            android:textColor="@color/icons" />

        <Button
            android:id="@+id/about_us_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/Transparent80"
            android:text="@string/about_us"
            android:textColor="@color/icons" />

    </GridLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_button"
        android:textSize="26sp"
        android:background="@color/Transparent150"
        android:textColor="@color/icons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/enter_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp" />
    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_link"
        android:textColorLink="@color/Transparent150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enter_button"
        android:layout_marginTop="55dp" />

</android.support.constraint.ConstraintLayout>

