<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.studying.a100ballovapplication.MainActivity"
    android:background="@drawable/grad_blue">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_button"
        android:textSize="26sp"
        android:background="@color/Transparent150"
        android:textColor="@color/icons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/enter_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />
    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_link"
        android:textColorLink="@color/Transparent150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enter_button"
        android:layout_marginTop="55dp"
        android:clickable="true"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="196dp"
        android:layout_height="336dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="70dp"
        android:columnCount="1"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="61dp">


        <Button
            android:id="@+id/schedule_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.8"
            android:background="@color/Transparent100"
            android:drawableStart="@drawable/ic_schedule"
            android:text="@string/schedule"
            android:textColor="@color/icons" />

        <Button
            android:id="@+id/enroll_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:alpha="0.8"
            android:background="@color/Transparent80"
            android:drawableStart="@drawable/ic_content_paste"
            android:text="@string/enroll"
            android:textColor="@color/icons" />

        <Button
            android:id="@+id/contacts_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.8"
            android:background="@color/Transparent80"
            android:drawableStart="@drawable/ic_contacts"
            android:text="@string/contacts"
            android:textColor="@color/icons" />

        <Button
            android:id="@id/about_us_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:alpha="0.8"
            android:background="@color/Transparent80"
            android:drawableStart="@drawable/ic_info_outline"
            android:text="@string/about_us"
            android:textColor="@color/icons" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>

